<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:text="App creada per Nil Oleart Playà com a pla d'incorporació a l'empresa Opentrends." />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <TextView
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@drawable/opentrends_logo"
            android:layout_width="350dp"
            android:layout_height="144dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@null"
                android:id="@+id/opentrends_quefem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:text="Què fem?" />

            <Button
                android:background="@null"
                android:id="@+id/opentrends_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:text="Blog" />

            <Button
                android:background="@null"
                android:id="@+id/opentrends_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:text="Twitter" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Sobre mi..."
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/nil_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:background="@null"
                android:src="@drawable/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitter" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/nil_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:background="@null"
                android:src="@drawable/linkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nil_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:background="@null"
                android:src="@drawable/instagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                />

            <TextView
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>